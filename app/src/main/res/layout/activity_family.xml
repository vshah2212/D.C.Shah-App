<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vshah2212.dcshahplanner.FamilyActivity">

<RelativeLayout
    android:id="@+id/RDLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"

    android:layout_above="@+id/KDLay">
    <TextView
        android:id="@+id/RDShah"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:text="RASIKLAL DAHYALAL SHAH" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/KDLay"

        android:layout_centerVertical="true">
    <TextView
        android:id="@+id/KDShah"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="KANTILAL DAHYALAL SHAH" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/CDLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_below="@+id/KDLay">
    <TextView
        android:id="@+id/CDShah"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="CHINULAL DAHYALAL SHAH" />
    </RelativeLayout>
</RelativeLayout>
